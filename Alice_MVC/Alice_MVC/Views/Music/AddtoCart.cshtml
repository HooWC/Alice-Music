@using Alice_DomainModelEntity.Models;
@model Music

@{
	ViewData["Title"] = "AddtoCart";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightgallery-js/1.4.0/css/lightgallery.min.css">

<style>
	@@import url(https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css);
	@@import url(https://fonts.googleapis.com/css?family=Raleway:400,500,600);

	* {
		margin: 0;
		padding: 0;
		overflow-y: hidden;
	}

	.map_wrapper {
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
		background: linear-gradient(0deg, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0.7) 100%);
	}

	figure.snip1278 {
		font-family: 'Raleway', Arial, sans-serif;
		position: relative;
		overflow: hidden;
		max-width: 800px;
		max-height: 900px;
		width: 100%;
		background: #1a1a1a;
		color: #ffffff;
		text-align: center;
		border-radius: 8px;
		box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
	}

		figure.snip1278 * {
			-webkit-box-sizing: border-box;
			box-sizing: border-box;
			-webkit-transition: all 0.35s cubic-bezier(0.25, 0.5, 0.5, 0.9);
			transition: all 0.35s cubic-bezier(0.25, 0.5, 0.5, 0.9);
		}

		figure.snip1278 .image {
			background-color: #000000;
			height: 400px;
			overflow: hidden;
			float: left;
		}

			figure.snip1278 .image:after {
				background-color: rgba(0, 0, 0, 0.85);
				position: absolute;
				content: '';
				top: 0;
				right: 0;
				left: 50%;
				bottom: 0;
			}

		figure.snip1278 img {
			width: 100%;
			object-fit: cover;
			height: 100%;
		}

		figure.snip1278 figcaption {
			position: absolute;
			width: 50%;
			right: 0;
			top: 50%;
			-webkit-transform: translateY(-50%);
			transform: translateY(-50%);
			padding: 10px 25px;
		}

		figure.snip1278 h4,
		figure.snip1278 p,
		figure.snip1278 .price {
			margin: 0 0 8px;
		}

		figure.snip1278 h4 {
			position: absolute;
			width: 151%;
			top: 10px;
			text-transform: uppercase;
			font-weight: 400;
			color: #ffffff;
			letter-spacing: 1px;
			z-index: 1;
			font-family: 'Times New Roman', Times, serif;
		}

		figure.snip1278 p {
			font-size: 0.7em;
			font-weight: 500;
			line-height: 1.6em;
		}

		figure.snip1278 .rating {
			position: absolute;
			width: 50%;
			line-height: 44px;
			color: #ffffff;
			left: 0;
			bottom: 0;
			background-color: rgba(0, 0, 0, 0.3);
		}

		figure.snip1278 .price {
			color: #f39c12;
			font-size: 1.3em;
			opacity: 0.8;
		}

		figure.snip1278 .add-to-cart {
			text-decoration: none;
			position: absolute;
			bottom: 0;
			right: 0;
			font-weight: 600;
			width: 50%;
			background-color: rgba(0, 0, 0, 0.2);
			line-height: 44px;
			font-size: 0.75em;
			text-transform: uppercase;
			color: #ffffff;
		}

			figure.snip1278 .add-to-cart:hover {
				color: red;
			}

		figure.snip1278:hover img,
		figure.snip1278.hover img {
			opacity: 0.6;
			-webkit-transform: scale(1.1);
			transform: scale(1.1);
		}

		figure.snip1278:hover .add-to-cart,
		figure.snip1278.hover .add-to-cart {
			background-color: rgba(0, 0, 0, 0.5);
		}
</style>

<div class="map_wrapper">
	<figure class="snip1278">
		<h4><span style="color:red;">Alice</span> Music</h4>
		<div class="image">
			<img src="@Model.SongImg" alt="sq-sample6" />
		</div>

		<figcaption>
			<p>@ViewBag.singername - @Model.SongName</p>
			<p>Genres : @Model.SongType</p>
			<div class="price">
				RM @Model.SongPrice.ToString("0.00")
			</div>
		</figcaption>
		<a href="#" id="AddtoCart" rel="@Model.MusicId" class="add-to-cart">Add to Cart</a>
	</figure>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>

	$(".Musicpage").css({
		"background": "red",
		"border-radius": "5px"
	});

	$(function () {

		$("#AddtoCart").click(function () {

			$.ajax({
				type: "POST",
				url: "/Ajax/AddMusicToCart",
				dataType: "json",
				data: {
					ProductID: $(this).attr("rel"),
				},
				success: function (data) {
					if (data == true) {
						window.location.href = "/Loading/Loading_To_Cart";
					}
				}
			})
		})


	})


</script>

